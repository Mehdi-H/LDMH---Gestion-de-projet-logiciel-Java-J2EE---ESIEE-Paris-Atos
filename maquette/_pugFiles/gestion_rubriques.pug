include mixin/gestion_rubriques
include mixin/flash

main
    header
        h2#rubrique-title
            span Gestion des rubriques

    +flash("success", "La rubrique a été modifiée avec succès !")
    +flash("error", "Une erreur s'est produite lors de la modification d'une rubrique.")

    main#liste-rubriques-wrap

        ul#liste-rubriques

            li.produit.produit-head
                p Rubrique
                p Position
                p Renommer
                p Validation
                p Suppression

            -var nb_ele = 6;
            -for(var i = 0; i <= nb_ele; i++) {
                +gestion_rubriques("+", nb_ele)
            -}


            hr


            li: h3 Ajouter une rubrique

            +flash("success", "La rubrique a été ajoutée avec succès !")
            +flash("error", "Une erreur s'est produite lors de la création d'une rubrique.")

            li.produit.produit-head
                p Nom rubrique

            li.produit.produit-add
                input(type="text", placeholder="Nom rubrique")
                input(type="sumbit", value="Valider")


